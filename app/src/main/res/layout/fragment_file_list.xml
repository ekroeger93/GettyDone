<?xml version="1.0" encoding="utf-8"?>


<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    >
    <data>
        <variable
            name="mFileListFragment"
            type="com.example.checkListApp.management.FileListFragment" />

    </data>

<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/fileListView"
        android:name="com.example.checkListApp.ItemFragment"
        android:layout_width="379dp"
        android:layout_height="304dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        tools:context=".management.FileListFragment"
        tools:listitem="@layout/fragment_file" />

    <Button
        android:id="@+id/goToMainList"
        android:layout_width="115dp"
        android:layout_height="78dp"
        android:layout_marginTop="24dp"
        android:text="Close"
        app:layout_constraintBottom_toTopOf="@+id/editFileName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.197" />

    <EditText
        android:id="@+id/editFileName"
        android:layout_width="266dp"
        android:layout_height="65dp"
        android:hint="Name of File"
        app:layout_constraintBottom_toTopOf="@+id/fileListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.823">

    </EditText>

    <Button
        android:id="@+id/saveAsBtn"
        android:layout_width="113dp"
        android:layout_height="62dp"
        android:text="Save As"
        app:layout_constraintBottom_toTopOf="@+id/fileListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toEndOf="@+id/editFileName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.787" />

    <Button
        android:id="@+id/loadFileBtn"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:text="Load"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fileListView"
        app:layout_constraintVertical_bias="0.756" />

    <Button
        android:id="@+id/deleteFileBtn"
        android:layout_width="112dp"
        android:layout_height="62dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fileListView"
        app:layout_constraintVertical_bias="0.051" />


</androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>

</layout>