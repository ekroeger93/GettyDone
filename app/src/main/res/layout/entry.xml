<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="myViewModel"
            type="com.example.checkListApp.ui.main.MainViewModel" />

    </data>


        <TableRow
            android:id="@+id/entry"
            tools:context="ui.main.MainFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/entryHeight"
            android:layout_marginTop="@dimen/entryMarginTop"
            android:layout_marginBottom="@dimen/entryMarginBottom"
            android:orientation="horizontal"
            android:background="#95FF8D"

            android:focusable="true"
            android:focusableInTouchMode="true"

            >

            <Button
                android:id="@+id/checkBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/outline_check_box_outline_blank_black_48"
                android:backgroundTint="#0097A7"
                android:backgroundTintMode="add"
                android:focusable="true"
                app:cornerRadius="10dp"
                app:rippleColor="#D81B60"
                app:strokeColor="#000000"
                app:strokeWidth="5dp" />


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:focusable="false"
                android:longClickable="false"
                >
                <TextView
                    android:id="@+id/entryText"
                    android:longClickable="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFF7B4"
                    android:textStyle="bold" />

                <com.example.checkListApp.input.CustomEditText
                android:id="@+id/entryEditTxt"
                    android:longClickable="false"
                    android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF7B4"
                android:visibility="invisible"
                />
</LinearLayout>

            <Button
                android:id="@+id/setEntryTimeBtn"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                app:cornerRadius="45dp"
                app:strokeColor="@color/black"
                app:strokeWidth="0dp" />

        </TableRow>
</layout>