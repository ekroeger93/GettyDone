<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="myViewModel"
            type="com.example.checkListApp.ui.main.MainViewModel" />

    </data>


        <TableRow

            android:id="@+id/entry"
            tools:context="ui.main.MainFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/entryHeight"
            android:layout_marginTop="@dimen/entryMarginTop"
            android:layout_marginBottom="@dimen/entryMarginBottom"
            android:orientation="horizontal"
            android:background="#95FF8D"
            >

            <Button
                android:id="@+id/checkBtn"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"

                android:layout_width="80dp"
                android:layout_height="match_parent"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >
            <TextView
                android:id="@+id/entryText"


                android:layout_marginEnd="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF7B4"
                android:textStyle="bold"
                />

            <com.example.checkListApp.input.CustomEditText
                android:id="@+id/entryEditTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF7B4"
                android:visibility="invisible"
                />


</LinearLayout>
        </TableRow>
</layout>