<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="80dp"
    android:layout_width="match_parent"

    android:layout_marginTop="@dimen/entryMarginTop"
    android:layout_marginBottom="@dimen/entryMarginBottom"

    android:background="@color/purple_200"
    >


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deleteFileSubBtn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/fileName"
        android:background="@color/teal_200"
        android:layout_height="match_parent"
        android:layout_width="240dp"

        />

    <Button
        android:id="@+id/deleteFileSubBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:background="@drawable/outline_delete_black_48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toEndOf="@id/fileName"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

